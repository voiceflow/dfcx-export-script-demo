{
  "name": "@voiceflow/tsconfig",
  "description": "Standard tsconfig for voiceflow",
  "version": "1.4.8",
  "author": "Ben Teichman",
  "bugs": {
    "url": "https://github.com/voiceflow/tsconfig/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@ovos-media/ts-transform-paths": "1.7.18-1",
    "@zerollup/ts-transform-paths": "1.7.18"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@voiceflow/commitlint-config": "2.0.0",
    "@voiceflow/eslint-config": "6.1.0",
    "@voiceflow/git-branch-check": "1.4.0",
    "@voiceflow/prettier-config": "1.2.1",
    "commitizen": "^4.2.3",
    "commitlint": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.11.0",
    "fixpack": "^4.0.0",
    "husky": "^4.3.8",
    "lint-staged": "12.3.7",
    "prettier": "2.6.0"
  },
  "files": [
    "root.json",
    "tsconfig.json",
    "web.json",
    "build.json",
    "build.*.json",
    "monorepo*.json"
  ],
  "homepage": "https://github.com/voiceflow/tsconfig#readme",
  "keywords": [
    "config",
    "semantic-release"
  ],
  "license": "MIT",
  "main": "tsconfig.json",
  "peerDependencies": {
    "typescript": "^4.1.5"
  },
  "prettier": "@voiceflow/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voiceflow/tsconfig.git"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint \"./**/*.{js,ts}\"",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "yarn lint --quiet",
    "lint:report": "yarn lint --format json -o sonar/report.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
